@model User
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
<div class="offset-3 col-lg-6 profile-main  flex-column flex-lg-row h-lg-full bg-surface-secondary mt-3">
    <div class="h-screen flex-grow-1 overflow-y-lg-auto">
        <!-- Main -->
        <main class="py-6 bg-surface-secondary">
            <div class="container-fluid">
                <div class="row">
                    <div class="mx-auto">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div class="col-sm-6 col-12 mb-4 mb-sm-0">
                                <!-- Title -->
                                <h1 class="h2 mb-0 ls-tight">Account Settings</h1>
                            </div>
                            <!-- Actions -->
                            <div class="">
                                <div class="mx-n1">

                                    <a asp-action="ProfileEdit"  class="btn d-inline-flex  btn-neutral mx-1 float-right">

                                        <span class=" pe-2">
                                            <i class="bi bi-pencil"></i>
                                        </span>
                                        <span class="ml-1">Edit</span>
                                    </a>

                                    

                                </div>
                            </div>
                        </div>

                        <!-- Profile picture -->
                        <div class="card shadow border-0 mt-4 mb-10">
                            <div class="card-body">
                                <div class="d-flex align-items-center justify-content-center">

                                   

                                </div>
                                <form asp-action="Profile" class="mb-6 mt-5">
                                    <div class="row flex-column mb-5">
                                        <div class=" col-md-6">
                                            <div class="">
                                                <span asp-validation-for="Username" class="text-warning small"></span>
                                                <label class="form-label" asp-for="Username"><b>Adı</b></label>
                                                <input asp-for="Username" type="text" class="form-control" value="@Model.Username" disabled>
                                            </div>
                                        </div>

                                        <hr class="hr-profile" />

                                        <div class=" col-md-6">
                                            <div class="">
                                                <span asp-validation-for="UserSurname" class="text-warning small"></span>
                                                <label class="form-label" asp-for="UserSurname"><b>Soyadı</b></label>
                                                <input asp-for="UserSurname" type="text" class="form-control" value="@Model.UserSurname" disabled>
                                            </div>
                                        </div>

                                        <hr class="hr-profile" />

                                        <div class=" col-md-6">
                                            <div class="">
                                                <span asp-validation-for="email" class="text-warning small"></span>
                                                <label class="form-label" asp-for="email"><b>Email</b></label>
                                                <input asp-for="email" type="email" class="form-control" value="@Model.email" disabled>
                                            </div>
                                        </div>

                                        <hr class="hr-profile" />

                                        <div class="col-md-6">
                                            <div class="">
                                                <span asp-validation-for="phone" class="text-warning small"></span>
                                                <label class="form-label" asp-for="phone"><b>Telefon Numarası</b></label>
                                                <input asp-for="phone" type="tel" class="form-control" value="@Model.phone" disabled>
                                            </div>
                                        </div>

                                        <hr class="hr-profile" />

                       


                                        <div class="col-md-6">
                                            <a asp-action="PasswordChanging" asp-controller="Account" class="btn btn-secondary">Şifre Yenile</a>
                                        </div>

                                    </div>

                                </form>

                            </div>
                        </div>
                        <!-- Form -->

                        <hr class="my-12" />
                        <!-- Individual switch cards -->

                        <div class="col-md-12" style="visibility:hidden">
                            <div class="card shadow border-0">
                                <div class="card-body d-flex align-items-center">
                                    <div>

                                        <h5 class="text-danger mb-2">Deactivate account</h5>
                                        <p class="text-sm text-muted">
                                            Once you delete your account, there is no going back. Please be certain.
                                        </p>
                                    </div>
                                    <div class="ms-auto">
                                        <button type="button" class="btn btn-sm btn-danger">Deactivate</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>
