@model Hairdresser.Models.Randevu
@{
    ViewData["Title"] = "Create Appointment";
}

<div class="container mt-4">
    <h2>Create Appointment</h2>
    <form asp-action="Create" method="post" class="mt-3">
        <div class="form-group">
            <label for="calisanId">Select Employee</label>
            <select asp-for="calisanId" class="form-control" asp-items="ViewBag.Calisanlar"></select>
        </div>

        <div class="form-group">
            <label for="ServiceId">Select Service</label>
            <select asp-for="ServiceId" class="form-control" asp-items="ViewBag.Servisler"></select>
        </div>

        <div class="form-group">
            <label for="AppointmentDate">Appointment Date</label>
            <input asp-for="AppointmentDate" class="form-control" type="datetime-local" />
        </div>

        <button type="submit" class="btn btn-primary">Create Appointment</button>
    </form>
</div>