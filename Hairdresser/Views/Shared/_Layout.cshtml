<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - My ASP.NET Core App</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Tamamen Saydam Navbar */
        .navbar {
            background-color: rgba(255, 255, 255, 0); /* Tamamen şeffaf */
            border: none; /* Çerçevesiz */
            box-shadow: none; /* Gölgesiz */
        }

        /* Navbar metin ve buton stili */
        .navbar .nav-link, 
        .navbar .btn {
            color: white; /* Beyaz metin */
            background: transparent;
            font-weight: 500;
            transition: color 0.3s ease;
        }

        .navbar .nav-link:hover, 
        .navbar .btn:hover {
            color: gold; /* Altın sarısı hover */
        }

        /* Log In Butonu */
        .navbar .btn-login {
            display: flex;
            align-items: center;
            color: white;
        }

        .navbar .btn-login:hover {
            color: gold;
        }

        /* Sayfa için genel arka plan */
        body {
            background-image: url('/images/hairrSaloonDesign.jpg');
            background-size: cover; /* Görselin ekranı tamamen kaplamasını sağlar */
            background-repeat: no-repeat; /* Görselin tekrarlanmamasını sağlar */
            
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <!-- Marka Adı -->
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">Çeto</a>

            <!-- Mobil Menü Toggler -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Menü -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <!-- Ortalanmış Menü -->
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")" 
                           asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "About" ? "active" : "")" 
                           asp-controller="Home" asp-action="About">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Services" ? "active" : "")" 
                           asp-controller="Home" asp-action="Services">Services</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Contact" ? "active" : "")" 
                           asp-controller="Home" asp-action="Contact">Contact</a>
                    </li>
                </ul>

                <!-- Sağdaki Log In Butonu -->
                <div class="d-flex">
                    <a class="btn btn-login" asp-controller="Account" asp-action="Login">
                        <i class="bi bi-person-circle"></i> Log In
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    @*<footer class="bg-light text-center py-3 mt-4">
        <p>&copy; @DateTime.Now.Year - MyBrand</p>
    </footer>*@

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
</body>
</html>
