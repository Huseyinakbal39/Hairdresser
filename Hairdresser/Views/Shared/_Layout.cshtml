<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Ceto</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="~/css/layout.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <!-- Marka Adı -->
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">Ceto</a>

            <!-- Mobil Menü Toggler -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Menü -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <!-- Ortalanmış Menü -->
                

                @if(User.Identity.IsAuthenticated)
                {
                    if(User.IsInRole("admin"))
                    {
                        <ul class="navbar-nav mx-auto">
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")" 
                                   asp-controller="Admin" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Services" ? "active" : "")" 
                                   asp-controller="Admin" asp-action="Service">Services</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Team" ? "active" : "")" 
                                   asp-controller="Admin" asp-action="Team">Team</a>
                            </li>
                        </ul>
                    }

                    else if(User.IsInRole("employee"))
                    {
                        
                    }
                    else
                    {
                        
                    }
                    <div class="d-flex">
                        <a class="btn btn-register" asp-controller="Account" asp-action="Profile">
                            <i class="fa-solid fa-user me-2"></i> @User.FindFirst("Username").Value
                      
                        </a>
                    </div>

                    <div class="d-flex">
                        <a class="btn btn-login" asp-controller="Account" asp-action="Logout">
                            <i class="fa-solid fa-right-to-bracket"></i> Logout
                        </a>
                    </div>
                }

                else
                {
                    <ul class="navbar-nav mx-auto">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")" 
                               asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Services" ? "active" : "")" 
                               asp-controller="Services" asp-action="Index">Services</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Team" ? "active" : "")" 
                               asp-controller="Team" asp-action="Index">Team</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Contact" ? "active" : "")" 
                               asp-controller="Contact" asp-action="Index">Contact</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "BookOnline" ? "active" : "")" 
                               asp-controller="BookOnline" asp-action="Index">Book Online</a>
                        </li>
                    </ul>
                    <div class="d-flex">
                        <a class="btn btn-register" asp-controller="Account" asp-action="Register">
                            <i class="fa-solid fa-user me-2"></i> Register
                      
                        </a>
                    </div>

                    <div class="d-flex">
                        <a class="btn btn-login" asp-controller="Account" asp-action="Login">
                            <i class="fa-solid fa-right-to-bracket"></i> Log In
                        </a>
                    </div>
                }

                
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    @*<footer class="bg-light text-center py-3 mt-4">
        <p>&copy; @DateTime.Now.Year - MyBrand</p>
    </footer>*@

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
</body>
</html>
