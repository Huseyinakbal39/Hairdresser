@{
    ViewData["Title"] = "Select Service";
}


<div style="display: flex; flex-direction: column; align-items: center; height: 100vh; justify-content: flex-start; padding-top: 100px;">
    <h2 style="font-size: 24px; font-weight: bold; margin-bottom: 30px;">Please Select a Service</h2>

    <div style="display: flex; gap: 20px;">
        <form method="get" action="/Services/ManServices">
            <button type="submit" 
                    style="padding: 15px 30px; font-size: 18px; border: 2px solid #007bff; background-color: #007bff; color: white; border-radius: 10px; cursor: pointer; transition: all 0.3s;">
                Man
            </button>
        </form>

        <form method="get" action="/Services/WomanServices">
            <button type="submit" 
                    style="padding: 15px 30px; font-size: 18px; border: 2px solid #e83e8c; background-color: #e83e8c; color: white; border-radius: 10px; cursor: pointer; transition: all 0.3s;">
                Woman
            </button>
        </form>
    </div>
</div>